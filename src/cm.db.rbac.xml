					</bean>
				</entry>				
				
				<entry key="dict.def.deletepartner">
					<bean class="com.ruisoft.cm.rbac.entity.DeleteEntity">
						<property name="sql">
							<value>
<![CDATA[DELETE FROM Cm_Partner WHERE ID={id} ]]>
							</value>
						</property>
					</bean>
				</entry>
			</map>	
		</property>
	</bean>
</beans>